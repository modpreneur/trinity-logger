{
  "name": "trinity/logger",
  "description": "Trinity Logger bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Trinity Team",
      "email": "info@modpreneur.com"
    }
  ],

  "require": {
    "php": ">=7.1",
    "symfony/http-kernel": "~2.8|~3.0",
    "symfony/dependency-injection": "~2.8|~3.0",
    "symfony/config": "~2.8|~3.0",
    "symfony/monolog-bundle": "~2.8 | ~3.0",
    "symfony/security-core": "~2.8|~3.0",
    "symfony/expression-language": "~2.8|~3.0",
    "guzzlehttp/guzzle": "~6.3",
    "doctrine/orm": "~2.5",
    "elasticsearch/elasticsearch": "~5.0",
    "trinity/search": "dev-master",
    "trinity/utils": "dev-master",
    "trinity/core-interfaces": "~1.0"
  },

  "require-dev": {
    "symfony/var-dumper": "~3.0",
    "phpunit/phpunit": "~6",
    "satooshi/php-coveralls" : "1.0.*",
    "phpstan/phpstan": "~0.7"
  },

  "autoload": {
    "psr-4": { "Trinity\\Bundle\\LoggerBundle\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  
  "minimum-stability": "stable",

  "archive": {
    "exclude": ["/bin", "/docker", "/Tests", "docker-compose.yml", "Dockerfile", "entrypoint.php", "entrypoint.sh", "phpunit.xml"]
  }
}
