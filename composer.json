{
  "name": "trinity/logger",
  "description": "Trinity Logger bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Trinity Team",
      "email": "info@modpreneur.com"
    }
  ],

  "require": {
    "php": ">=7",
    "symfony/http-kernel": "~2.8|~3.0",
    "symfony/dependency-injection": "~2.8|~3.0",
    "symfony/config": "~2.8|~3.0",
    "doctrine/orm": "~2.5",
    "elasticsearch/elasticsearch": "~2.0",
    "trinity/search": "dev-master",
    "trinity/settings": "dev-master"


//    "friendsofsymfony/user-bundle": "dev-master",
//    "trinity/framework": "dev-master",
  },

  "require-dev": {
    "symfony/var-dumper": "~3.0"
//    "phpunit/phpunit": "~5",
//    "satooshi/php-coveralls" : "1.0.*"
  },

  "autoload": {
    "psr-4": { "Trinity\\Bundle\\LoggerBundle\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },

  "minimum-stability": "stable",
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },

  "archive": {
    "exclude": ["/bin", "/docker", "/Tests", "docker-compose.yml", "Dockerfile", "entrypoint.php", "entrypoint.sh", "phpunit.xml"]
  }
}
